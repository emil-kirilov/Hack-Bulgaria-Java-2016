package DungeonsAndDragons;

public abstract class Unit {
	int health;
	int maxHP;
	int mana;
	int maxMP;
	
	public Unit(int hp, int mp) {
		health = hp;
		maxHP = hp;
		mana = mp;
		maxMP = mp;
	}
	
	public boolean isAlive() {
		return health > 0;
	}
	
	public int getHealth() {
		return health;
	}

	public int getMana() {
		return mana;
	}

	public void takeHealing(int healHP) {
		if (healHP + getHealth() > maxHP) {
			health = maxHP;
		} else {
			health += healHP;
		}
	}

	public void takeMana(int healMP) {
		if (healMP + getMana() > maxMP) {
			mana = maxMP;
		} else {
			mana += healMP;
		}
	}
	
	public void takeDamage(int damage) {
		health -= damage;
	}

	public abstract boolean canCast(Spell name);
	public abstract	void attack(String type);
}
