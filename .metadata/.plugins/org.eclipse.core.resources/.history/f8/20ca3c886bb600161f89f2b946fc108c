package week7;

public class MergeSort<T extends Comparable<T>> {
	public void sort(T[] arr, int lower, int upper) {
		if (upper - lower < 32) {
			insertionSort(arr, lower, upper);
		} else {			
			merge(sort(arr, 0, arr.length/2), sort(arr, arr.length/2 + 1, arr.length - 1));
		}
	}
	
	private void merge(T[] left, T[] right) {
		T currentMin = (left[0].compareTo(left[1]) < 0) ? left[0] : right[0];
		
	}
	
	private void insertionSort(T[] arr, int lower, int upper){
		for (int i = lower + 1; i < upper + 1; i++) {
			for (int j = i - 1; j >= lower; j--) {
				if (arr[j].compareTo( arr[j + 1] ) > 0) {
					T temp = arr[j];
					arr[j] = arr[j + 1];
					arr[j + 1] = temp;
				}
			}
		}
	}
	
	public static void main(String[] args) {
	}
}
