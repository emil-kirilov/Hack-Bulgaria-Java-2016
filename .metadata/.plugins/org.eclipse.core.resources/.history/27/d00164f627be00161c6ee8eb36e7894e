package week8;

public abstract class Unit {
	int health;
	int maxHP;
	int mana;
	int maxMP;
	
	public Unit(int hp, int mp) {
		health = hp;
		maxHP = hp;
		mana = mp;
		maxMP = mp;
	}
	
	public boolean isAlive() {
		return health > 0;
	}
	
	public int getHealth() {
		return health;
	}

	public int getMana() {
		return mana;
	}

	public abstract boolean canCast();

	public void takeHealing(int healHP) {
		if (healHP + getHealth() > maxHP) {
			health = maxHP;
		} else {
			health += healHP;
		}
	}

	public void takeMana(int healMP) {
		if (healMP + getMana() > maxMP) {
			mana = maxMP;
		} else {
			mana += healMP;
		}
	}
	
	public abstract	void attack();
	
	public takeDamage(damage);
}
