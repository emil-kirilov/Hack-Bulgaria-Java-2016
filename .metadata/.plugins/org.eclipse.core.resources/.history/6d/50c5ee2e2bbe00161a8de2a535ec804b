package DungeonsAndDragons;

public class Enemy extends Unit{
	int damage;
	Weapon weapon;
	Spell spell;
	
	public Enemy(int hp, int mp, int dmg) {
		super(hp, mp);
		damage = dmg;
	}

	@Override
	public boolean canCast(Spell name) {
		return spell.equals(name);
	}

