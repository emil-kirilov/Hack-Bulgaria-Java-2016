package week8;

public abstract class Unit {
	int health;
	int maxHP;
	int mana;
	int maxMP;
	
	public boolean isAlive() {
		return health > 0;
	}
	
	public int getHealth() {
		return health;
	}

	public int getMana() {
		return mana;
	}

	public abstract boolean canCast();

	public takeHealing();

	
	
	
	
	public takeMana();
	
	public	attack();
	
	public takeDamage(damage);
}
